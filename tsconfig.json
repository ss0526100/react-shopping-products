{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* custom */
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@hooks/*": ["hooks/*"],
      "@domain/*": ["domain/*"],
      "@routes/*": ["routes/*"],
      "@pages/*": ["pages/*"],
      "@apis/*": ["apis/*"],
      "@errors/*": ["errors/*"],
      "@appTypes/*": ["appTypes/*"],
      "@recoil/*": ["recoil/*"],
      "@validation/*": ["validation/*"],
      "@mocks/*": ["mocks/*"]
    },
    "types": ["vite-plugin-svgr/client", "vite/client"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
